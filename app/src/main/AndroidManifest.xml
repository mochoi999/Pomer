<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mochoi.pomer">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".PomerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mochoi.pomer.view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mochoi.pomer.view.TodoListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mochoi.pomer.view.RegisterEditTaskActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mochoi.pomer.view.BacklogActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.TimerActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.PastActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.SettingActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>